import java.util.Scanner;
class test62{
	public static void main(String[] args){
		Scanner scanner=new Scanner(System.in);
		System.out.print("enter the number:");
		int n=scanner.nextInt();
		int sum=0;
		int  rem;
		 for (int i = 1; i <= (n - 1); i++)
    {
         rem = n % i;
	if (rem == 0)
        {
            sum = sum + i;
        }
    }
    if (sum == n)
		{
		System.out.print("the:" +n+ "is  perfect.number \n ");
		}
        
    else{
		System.out.print("the number:"+n+ "  is not perfect.number \n ");
		}

}
}
